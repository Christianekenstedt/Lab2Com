@model IEnumerable< Lab2Community.Models.View.RecieverViewModel >

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<h2>Inbox</h2>

<p>
    @Html.ActionLink("Create New Message", "Create", new { @class= "btn btn-sm btn-success btn-block" })
</p>

<div class="col-md-12">
    <div class="row">

        
        <div class="col-sm-3">
            <h3>Sender(s)</h3>            
            <hr />
            @foreach (var user in Model)
            {
                <a href="javascript:void(0)" onclick="openMessagesFromUser('@user.RecieverId.ToString()')">
                    <div>
                        <div class="left">
                            <h4>@user.UserName </h4>
                        </div>
                    </div>
                </a>
                <hr />
            }
        </div>

        
        <div id="messagesPartial" class="col-sm-3"></div>

        
        <div id="detalisPartial" class="col-sm-6"></div>

    </div> 
           
</div>
        

<script>

    function openMessagesFromUser(id) {
        $.ajax({
            type: "GET",
            url: "From",
            data: { id: id }
        }).done(function(data){
            $('#messagesPartial').html(data);
        });

    }
    function openMessage(id) {
        $.ajax({
            type: "GET",
            url: "Details",
            data: { id: id }
        }).done(function (data) {
            $('#detalisPartial').html(data);
        });
    }
    function deleteMessage(id) {
        alert("Delete");
        $.ajax({
            type: "POST",
            url: '@Url.Action("Delete", "Message")',
            data: { id: id }
        }).done(function (data) {
            
        });
    }
</script>